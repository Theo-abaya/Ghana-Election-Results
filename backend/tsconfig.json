{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true, // ✅ Allows importing JSON files if needed
    "forceConsistentCasingInFileNames": true // ✅ Helps avoid import path issues
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"] // ✅ Ensure Jest sees your test files
}
